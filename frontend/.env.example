# NEXUS-CORE Environment Variables
# Copy this file to .env and fill in your actual values

# GENESIS-NGX-Agents Integration (TU TESORO BACKEND)
VITE_GENESIS_API_URL=http://localhost:8000
VITE_GENESIS_API_KEY=ngx_development_api_key_2025
VITE_MCP_ENABLED=true

# Legacy API Configuration (Fallback)
VITE_API_URL=http://localhost:8000
VITE_API_TIMEOUT=30000

# Supabase Configuration (Fallback)
VITE_SUPABASE_URL=http://localhost:8000
VITE_SUPABASE_ANON_KEY=demo-key

# NGX Configuration
VITE_NGX_INTERNAL_CLIENT_ID=nexus-core
VITE_NGX_OPERATION_MODE=internal

# Environment
VITE_APP_ENV=development  # development, staging, production
VITE_APP_VERSION=3.0.0

# Feature Flags
VITE_ENABLE_MOCK_FALLBACK=true
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_DEBUG_LOGS=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SENTRY=false

# Application Configuration
VITE_APP_NAME="NEXUS-CORE"
VITE_APP_DESCRIPTION="NGX Performance & Longevity Control Center"
VITE_MAX_FILE_SIZE=10485760  # 10MB in bytes

# Connection Settings
VITE_REQUEST_TIMEOUT=10000
VITE_RETRY_ATTEMPTS=3
VITE_WEBSOCKET_RECONNECT=true

# Security
# Note: Only include public API keys here, never include secret keys in frontend code